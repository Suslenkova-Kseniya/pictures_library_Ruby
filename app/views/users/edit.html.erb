<h1 class="text-center mt-4">Add pictures to collection</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true, data: {turbo: false})  do |f| %>
        <div class="form-group row mt-4">
          <%= f.label :picture, class: "col-2 col-form-label text-light"%>
          <div class="col-10">
            <%= f.collection_select :picture_ids, Picture.order(:title), :id, :title,
                                   { prompt: "Make your selection from the list below (can be empty), max: 3"},
                                   { multiple: true, size: 10, class: "form-select shadow rounded"}%>
          </div>
        </div>

        <div class="row mt-4 justify-content-center">
          <div class="col-2">
            <%= f.submit class: "btn btn-outline-light btn-log" %>
          </div>
        </div>
      <% end %>
    </div>
    <%=link_to ' Cancel ', user_path(current_user), class: "text-center text-info mb-3"%>
  </div>
</div>