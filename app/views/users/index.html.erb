<h1 class="text-center mt-4">Users</h1>

<div class="text-center mt-4">
  <%= link_to "Create new user", new_user_path, class: "btn btn-outline-info" %>
</div>

<div class="container">
  <% @users.each do |user| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="shadow mb-5 bg-body rounded">
          <div class="card text-center">
            <div class="card-header fst-italic">
              <%= link_to user.username, user%>
            </div>
            <div class="card-body">
              <p class="card-text"><%= pluralize(user.pictures.count, "picture") %></p>
              <button class="btn btn-outline-success"><%= link_to 'View profile', user, class: "text-reset text-decoration-none" %></button>
              <button class="btn btn-outline-primary"><%= link_to 'Edit profile', edit_user_registration_path(user),  class: "text-reset text-decoration-none" %></button>
            </div>
            <div class="card-footer text-muted">
              <small>Joined <%= time_ago_in_words(user.created_at) %> ago</small>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

