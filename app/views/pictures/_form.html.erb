<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @picture %>
      <%= form_with(model: @picture, class: "shadow p-3 mb-3 bg-info rounded", local: true, data: {turbo: false})  do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label text-light"%>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of picture"%>
          </div>
        </div>

        <div class="form-group row mt-4">
          <%= f.label :description, class: "col-2 col-form-label text-light"%>
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of picture"%>
          </div>
        </div>

        <div class="row mt-4 justify-content-center">
          <div class="col-2">
            <%= f.submit class: "btn btn-outline-light btn-log" %>
          </div>
         </div>
        <% end %>
    </div>
    <%=link_to '[ Cancel and return to pictures listing ]', pictures_path, class: "text-center text-info"%>
    </div>
</div>