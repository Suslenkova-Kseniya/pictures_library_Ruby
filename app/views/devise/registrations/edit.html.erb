<h2 class="text-center mt-4">Edit <%= resource_name.to_s.humanize %></h2>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%#= render 'shared/errors', obj: @user %>
      <%= render "devise/shared/error_messages", resource: resource %>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "shadow p-3 mb-3 bg-info rounded", html: { method: :put }) do |f| %>

        <div class="form-group row">
          <%= f.label :username, class: "col-2 col-form-label text-light"%>
          <div class="col-10">
            <%= f.text_field :username, autofocus: true, class: "form-control shadow rounded", placeholder: "Enter a username"%>
          </div>
        </div>

        <div class="form-group row mt-4">
          <%= f.label :email, class: "col-2 col-form-label text-light"%>
          <div class="col-10">
            <%= f.email_field :email, autofocus: true,  autocomplete: "email", class: "form-control shadow rounded"%>
          </div>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="form-group row" >Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="form-group row mt-4">
          <div class="col-2 col-form-label text-light">
            <%= f.label :password %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
          </div>
          <div class="col-10">
            <i>(leave blank if you don't want to change it)</i><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control shadow rounded"%>
          </div>
        </div>

        <div class="form-group row mt-4">
          <%= f.label :password_confirmation, class: "col-2 col-form-label text-light"%>
          <div class="col-10">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control shadow rounded"%>
          </div>
        </div>

        <div class="form-group row mt-4">
          <%= f.label :current_password, class: "col-2 col-form-label text-light"%>
          <div class="col-10">
            <i>(we need your current password to confirm your changes)</i><br />
            <%= f.password_field :current_password, autocomplete: "new-password", class: "form-control shadow rounded"%>
          </div>
        </div>

        <div class="row mt-4 justify-content-center">
          <div class="col-2">
            <%= f.submit "Update" , class: "btn btn-outline-light btn-log" %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="mt-4 text-center">
      <%= button_to "Cancel account", registration_path(resource_name), data: { turbo_confirm: "Are you sure you want to delete the user account and all associated pictures?"}, method: :delete %>
      <p class="mt-2"><%= link_to "Back", :back %></p>
    </div>
  </div>
</div>