<h2 class="text-center mt-4">Sign up</h2>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "shadow p-3 mb-3 bg-info rounded") do |f| %>

        <div class="form-group row mt-4">
          <%= f.label :email, class: "col-2 col-form-label text-light"%>
          <div class="col-10">
            <%= f.email_field :email, autofocus: true,  autocomplete: "email", class: "form-control shadow rounded"%>
          </div>
        </div>

        <div class="form-group row mt-4">
          <div class="col-2 col-form-label text-light">
            <%= f.label :password %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
          </div>
          <div class="col-10">
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control shadow rounded"%>
          </div>
        </div>

        <div class="form-group row mt-4">
          <%= f.label :password_confirmation, class: "col-2 col-form-label text-light"%>
          <div class="col-10">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control shadow rounded"%>
          </div>
        </div>

        <div class="row mt-4 justify-content-center">
          <div class="col-2">
            <%= f.submit "Sign up" , class: "btn btn-outline-light btn-log" %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="mt-4 text-center text-info">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>