<h2 class="text-center mt-4">Forgot your password?</h2>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), class: "shadow p-3 mb-3 bg-info rounded", html: { method: :post }) do |f| %>
        <div class="form-group row mt-4">
          <%= f.label :email, class: "col-2 col-form-label text-light"%>
          <div class="col-10">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control shadow rounded" %>
          </div>
        </div>

        <div class="row mt-4 justify-content-center">
          <div class="col-6">
            <%= f.submit "Send me reset password instructions" , class: "btn btn-outline-light btn-log" %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="mt-4 text-center text-info">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>